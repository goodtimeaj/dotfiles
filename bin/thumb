#!/usr/bin/env bash
# Usage: thumb
# Change directory to an attached thumb drive.

[ "$(uname -s)" != "Darwin" ] && exit 1

declare -a paths=('Lexar' 'KINGSTON' 'NO NAME')
found=false

for path in "${paths[@]}"; do
  target_dir="/Volumes/$path"
  echo "Looking for $target_dir"

  if [ -d "$target_dir" ]; then
    $found=true
    cd "$target_dir"
    ls -lahG
  fi
done

if [ "$found" = false ]; then
  echo 'Drive not found'
fi
